<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:type="linear"
                android:startColor="#4FCAF8"
                android:centerColor="@color/flutter_blue"
                android:endColor="#4FCAF8"
                android:centerX="0.3"
                android:centerY="0.3"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#ffcc66" />
            <corners
                android:radius="30dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>